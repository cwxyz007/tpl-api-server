{
  "name": "tpl-node-api",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "build": "npm run openapi && tsup",
    "db:migrate": "prisma migrate dev --name init",
    "db:generate": "prisma generate",
    "openapi": "tsx scripts/generateRoutesInfo.ts"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/routes/**/*.ts"
    ],
    "clean": true,
    "format": [
      "esm"
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "treeshake": true
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/swagger-ui": "^0.5.0",
    "@prisma/client": "6.2.1",
    "dotenv": "^16.4.7",
    "hono": "^4.6.16",
    "prisma": "^6.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "openapi-ts-define": "^0.4.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}